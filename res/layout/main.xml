<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <dizzy.med.jhu.edu.EMGGraph.GraphView
        android:id="@+id/graph"
        android:layout_width="fill_parent"
        android:layout_height="479dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_weight="0.75" >

        <Button
            android:id="@+id/button_NewFile"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="Open New File" />

        <TextView
            android:id="@+id/value"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="@string/hello"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_closefile"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:onClick="onButtonCloseFile"
            android:text="Close File" />

        <Button
            android:id="@+id/ButtonVideoRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VidRecord" />

        <Button
            android:id="@+id/ButtonVideoStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VidStop" />
    </LinearLayout>

    <SurfaceView
        android:id="@+id/surface_camera"
        android:layout_width="739dp"
        android:layout_height="wrap_content"
        android:layout_weight="11.09" />

</LinearLayout>
